<%= link_to 'Sign out', main_app.session_path, data: { turbo_method: :delete } %>

<h3>Your Security Keys</h3>
<ul>
  <% current_user.webauthn_credentials.each do |credential| %>
    <li>
      <span>
        <span>
          <%= credential.nickname %>
        </span>

        <span>
          <%= credential.external_id %>
        </span>
      </span>

      <% if current_user.can_delete_credentials? %>
        <%= link_to "Delete credential", main_app.webauthn_credential_path(credential), data: { turbo_method: :delete } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add credential', main_app.new_webauthn_credential_path %>
